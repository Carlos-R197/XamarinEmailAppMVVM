<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinEmailCreationApp.RegisterPage"
             Title="Register"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Image Source="INTECLogo.png" WidthRequest="150" HeightRequest="150"></Image>
            <Entry Placeholder="Name" Margin="20, 0, 20, 0" Text="{Binding Name}"/>
            <Entry Placeholder="Email" Margin="20, 0, 20, 0"  Text="{Binding Email}"/>
            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" Margin="20, 0, 20, 0" />
            <Entry Placeholder="ConfirmPassword" Text="{Binding ConfirmPassword}" IsPassword="True" Margin="20, 0, 20, 0" />
            <Button Text="Register" Command="{Binding RegisterCommand}" BackgroundColor="Red" Margin="20, 0, 20, 0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>